    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "notehub add 1",
            "type": "debugpy",
            "request": "launch",
            "module": "notehub",
            "args": [
                "add"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "notehub status 1",
            "type": "debugpy",
            "request": "launch",
            "module": "notehub",
            "args": [
                "status"
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "notehub status 2",
            "type": "debugpy",
            "request": "launch",
            "module": "notehub",
            "args": [
                "status",
                "-r",
                "."
            ],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "notehub add in ~",
            "type": "debugpy",
            "request": "launch",
            "module": "notehub",
            "args": [
                "add"
            ],
            "cwd": "${env:HOME}",
            "stopOnEntry": false
        }
    ]
}
